<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Text -->
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/personal_details"
            android:textAlignment="center"
            android:textColor="@color/primary_color3"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_subheader"/>

        <TextView
            android:id="@+id/tv_subheader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/get_to_know"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_gender"/>

        <!-- Gender Selection -->
        <LinearLayout
            android:id="@+id/ll_gender"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_subheader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/til_dob">

            <Button
                android:id="@+id/btn_male"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/male"
                android:backgroundTint="@color/light_gray"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_male"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_female"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/female"
                android:backgroundTint="@color/light_gray"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_female"
                android:padding="16dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Date of Birth Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_dob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/date_of_birth"
            android:layout_marginTop="16dp"
            app:startIconDrawable="@drawable/ic_calender"
            app:layout_constraintTop_toBottomOf="@id/ll_gender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/til_occupation">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="date"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Occupation Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_occupation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/occupation"
            android:layout_marginTop="8dp"
            app:startIconDrawable="@drawable/ic_suitcase"
            app:layout_constraintTop_toBottomOf="@id/til_dob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_photo_upload">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Photo Upload Section -->
        <LinearLayout
            android:id="@+id/ll_photo_upload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_occupation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_continue">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image"
                    app:srcCompat="@drawable/circle_with_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/let_s_put_a_face"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/btn_upload_photo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upload_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/upload_your_photo"
                    android:textAlignment="viewStart"
                    app:backgroundTint="@color/primary_color2"
                    app:icon="@drawable/ic_circle_plus"
                    app:iconTint="@null"
                    app:iconGravity="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_image"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/continue_to_home"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ll_photo_upload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>